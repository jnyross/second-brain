{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/schemas/knowledge_index.schema.json",
  "title": "AI Assistant Knowledge Index",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "documents"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "path", "content_type", "sha256", "tags", "added_at"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "path": {"type": "string", "minLength": 1},
          "content_type": {"type": "string", "minLength": 1},
          "sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
          "tags": {
            "type": "array",
            "items": {"type": "string"}
          },
          "added_at": {"type": "string", "minLength": 1},
          "updated_at": {"type": "string", "minLength": 1}
        }
      }
    }
  }
}
