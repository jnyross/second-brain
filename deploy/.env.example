# Second Brain Production Environment Variables
# Copy this to .env and fill in your values
# chmod 600 .env to protect secrets

# =============================================================================
# REQUIRED - Telegram
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# REQUIRED - Notion
# =============================================================================
NOTION_API_KEY=your_notion_api_key_here
NOTION_INBOX_DB_ID=
NOTION_TASKS_DB_ID=
NOTION_PEOPLE_DB_ID=
NOTION_PROJECTS_DB_ID=
NOTION_PLACES_DB_ID=
NOTION_PREFERENCES_DB_ID=
NOTION_PATTERNS_DB_ID=
NOTION_EMAILS_DB_ID=
NOTION_LOG_DB_ID=

# =============================================================================
# OPTIONAL - OpenAI (for Whisper voice transcription)
# =============================================================================
OPENAI_API_KEY=

# =============================================================================
# OPTIONAL - Google OAuth (for Calendar/Gmail/Drive integration)
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# OPTIONAL - Configuration
# =============================================================================
USER_TIMEZONE=Europe/London
CONFIDENCE_THRESHOLD=80
USER_TELEGRAM_CHAT_ID=

# =============================================================================
# OPTIONAL - Monitoring
# =============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
